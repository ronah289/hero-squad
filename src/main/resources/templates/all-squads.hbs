{{#partial "content"}}
    <h1>Squads</h1><br><br>
    <div class="row">
        <div class="col-md-6">
            {{#if squads}}
                {{#each squads }}
                    <h4>{{name}} </h4>
                    <a href="/squads/{{id}}"><button class="btn btn-info btn-md">Details</button></a><br><br><hr>
                {{/each}}
            {{else}}
                <h3>You haven't created any squads!</h3>
            {{/if}}
        </div>
        <div class="col-md-6">
            {{#if squad}}
                <div class="card  text-dark">

                    <div class="card-body">
                        <h4 class="card-title">{{squad.name}}  <a href="/squad/{{squad.id}}/delete"><button class="btn
                        btn-danger">Delete Squad</button></a></h4>
                        <hr>
                        <p class="card-text">Max Size : {{squad.maxSize}}</p><br>
                        <p class="card-text">Cause : {{squad.cause}}</p><br>
                        <p>Heroes :</p>


                        {{#each squad.heroes}}
                            <hr>
                        <h3>Squad Members.</h3>
                            <li class="card-text">{{name}}</li><br>
                            <hr>
                            <p class="card-text">Age : {{age}}</p><br>
                            <p class="card-text">Special Powers : {{powers}}</p><br>
                            <p class="card-text">Weakness: {{weakness}}</p><br>
                        {{/each}}
                    </div>
                </div>
            {{/if}}
        </div>
    </div>
{{/partial}}
{{#partial "footer"}}
    {{#if squads}}
        <a href="/squads/delete"><button class="btn btn-lg btn-danger"> Delete All Squads</button></a>
    {{else}}
    {{/if}}
{{/partial}}
{{> layout.hbs}}